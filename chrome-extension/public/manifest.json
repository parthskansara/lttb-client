{
  "manifest_version": 3,
  "name": "listentothis,bro",
  "version": "1.01",
  "description": "Allows users to easily share music via Spotify",
  "icons": {
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "action": {
    "default_popup": "index.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["tabs", "storage", "clipboardRead"],
  "host_permissions": [
    "http://localhost:5173/*",
    "http://localhost:3001/*",
    "https://lttb-server.vercel.app/*",
    "http://lttb-server.vercel.app/*"
  ]
}
